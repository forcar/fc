<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.clas.detector</groupId>
    <artifactId>clas-fc</artifactId>
    <version>3.0</version>
    <packaging>jar</packaging>
    <dependencies>
       <dependency>
	<groupId>org.jlab.services</groupId>
	<artifactId>clas12detector-ec</artifactId>
	<version>1.0-SNAPSHOT</version>
	<type>jar</type>
      </dependency>   
      <dependency>
	<groupId>org.clas.detector</groupId>
	<artifactId>clas12ana</artifactId>
	<version>3.0</version>
	<type>jar</type>
      </dependency>
      <dependency>
	<groupId>org.jlab.coat</groupId>
	<artifactId>coat-libs</artifactId>
	<version>7.0.0-SNAPSHOT</version>
	<type>jar</type>
      </dependency>
      <dependency>
	<groupId>org.jlab.elog</groupId>
	<artifactId>jlog</artifactId>
	<version>2.9.0</version>
	<type>jar</type>
      </dependency>
      <dependency>
	<groupId>org.jlab.services</groupId>
	<artifactId>clas12detector-tof</artifactId>
	<version>1.0-SNAPSHOT</version>
	<type>jar</type>
      </dependency>
      <dependency>
	<groupId>org.jlab.services</groupId>
	<artifactId>clas12detector-eb</artifactId>
	<version>1.0-SNAPSHOT</version>
	<type>jar</type>
      </dependency>
      <dependency>
	<groupId>org.jlab.coda</groupId>
	<artifactId>jclara</artifactId>
	<version>4.3-SNAPSHOT</version>
	<type>jar</type>
      </dependency>
      <dependency>
	<groupId>org.jlab.fc</groupId>
	<artifactId>3DViewer</artifactId>
	<version>1.0-SNAPSHOT</version>
	<type>jar</type>
      </dependency>
      <dependency>
	<groupId>org.jlab.fc</groupId>
	<artifactId>ca</artifactId>
	<version>1.0.0</version>
	<type>jar</type>
      </dependency>
      <dependency>
	<groupId>org.jlab.fc</groupId>
	<artifactId>disruptor</artifactId>
	<version>3.3.0</version>
	<type>jar</type>
      </dependency>
      <dependency>
	<groupId>org.jlab.fc</groupId>
	<artifactId>geometry-viewer</artifactId>
	<version>2.0-SNAPSHOT</version>
	<type>jar</type>
      </dependency>
      <dependency>
	<groupId>org.jlab.fc</groupId>
	<artifactId>javaGeom</artifactId>
	<version>0.11.2</version>
	<type>jar</type>
      </dependency>
      <dependency>
	<groupId>org.jlab.fc</groupId>
	<artifactId>jroot</artifactId>
	<version>6.06.00</version>
	<type>jar</type>
      </dependency>
   </dependencies>

    <build>
  <extensions>
    <extension>
      <groupId>org.apache.maven.wagon</groupId>
      <artifactId>wagon-ssh-external</artifactId>
      <version>2.8</version>
    </extension>
  </extensions>
  <plugins>
    <plugin>
      <artifactId>maven-assembly-plugin</artifactId>
      <version>2.6</version>
      <configuration>
        <descriptorRefs>
          <descriptorRef>jar-with-dependencies</descriptorRef>
        </descriptorRefs>
      </configuration>
      <executions>
        <execution>
          <id>make-assembly</id> <!-- this is used for inheritance merges -->
          <phase>package</phase> <!-- bind to the packaging phase -->
          <goals>
            <goal>single</goal>
          </goals>
        </execution>
      </executions>
    </plugin>
  </plugins>
</build>
    <repositories>
      <repository>
        <id>clas12maven</id>
        <url>https://clasweb.jlab.org/clas12maven</url>
      </repository>
    </repositories>
    <name>clas-fc</name>
    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
    </properties>
</project>
